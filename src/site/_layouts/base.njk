<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ title }}</title>
    {% set css %}
    {% include "css/reset.css" %}
    {% include "css/lifeline.css" %}
    {% endset %}
    <script>
      (function (H) {
        H.className = H
          .className
          .replace(/\bno-js\b/, 'js')
      })(document.documentElement)
    </script>
    <style>
      {{css | safe}}
    </style>
  </head>
  <body>
    {% include "partial.njk" %}
  </body>
  {% set js %}
  {% include "js/lifeline.js" %}
  {% endset %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/ScrollTrigger.min.js"></script>
  <script>
    {{ js | safe }}
  </script>
  <script nomodule="nomodule">
    document
      .querySelectorAll("[data-ll-date]")
      .forEach(function (item) {
        item.addEventListener("click", function (event) {

          var date = card.dataset.date;
          document
            .querySelectorAll("[data-ll-date][class*='ll-highlight']")
            .forEach(function (item) {
              item
                .classList
                .remove("ll-highlight");
            });
          document
            .querySelectorAll("[data-ll-date='" + date + "']")
            .forEach(function (item) {
              item
                .classList
                .add("ll-highlight");
            });
        });
      });
  </script>
</html>