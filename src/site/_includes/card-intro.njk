{% extends "card.njk" %}

{% block content %}
  <header class="ll-card__header ll-card--{{ item.type }}__header">
    <h2 class="ll-card__title ll-card--{{ item.type }}__title">
      {{ category.name }}
    </h2>
    <strong>{{ category.total }}
      calls</strong>
  </header>
  <p class="ll-card__content ll-card--{{ item.type }}__content">
    {{ item.text }}
  </p>
{% endblock %}