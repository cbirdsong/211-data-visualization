{% set card_id %}
{{ category.slug ~ "-" ~ item.date_slug ~ "-" ~ item.time | replace(":", "") }}
{% endset %}

{% set datetime %}
{% if item.time %}
  {{ item.date_long ~ ", " ~ item.time }}
{% else %}
  {{ item.date_long }}
{% endif %}
{% endset %}

<article class="ll-card ll-card--{{ item.type }} category-{{ category.slug }} date-{{ item.date_num }}" data-date="{{ item.date_num }}" id="{{ card_id | slug }}">
  <div class="ll-card--{{ item.type }}__meta ll-card--{{ item.type }}__header">
    <div class="ll-card-header">
      <div class="ll-card-parish">
        <small>{{ item.parish }}
          Parish</small>
      </div>
      <time class="date">{{ datetime }}</time>
    </div>

    <a class="native-share-button share-button" href="#{{ card_id | slug }}" data-title="211 call from {{ item.parish }} on {{ item.date_long }}" data-url="#{{ card_id | slug }}">
      <i class="fa fa-link" aria-hidden="true"></i>
      <span class="sr-only">Share</span>
    </a>
  </div>
  <div class="ll-card--{{ item.type }}__content">
    <p>{{ item.text }}</p>
  </div>
  <div class="ll-card--{{ item.type }}__meta ll-card--{{ item.type }}__footer">
    <div class="ll-card-length">
      <small>Length:</small>
      {{ item.length | int }}
      min.</span>
  </div>
</article>