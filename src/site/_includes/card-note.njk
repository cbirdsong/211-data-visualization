<article class="card card--{{ item.type }}  category-{{ category.slug }} date-{{ item.date_num }}" data-date="{{ item.date_num }}">
  <div class="dateline">
    {{ item.date_medium }}
  </div>
  <div class="card--{{ item.type }}__title">
    <strong>{{ item.headline }}</strong>
  </div>
  {% if item.text %}
    <div class="card--{{ item.type }}__content">
      <p>
        {{ item.text }}
      </p>
    </div>
  {% endif %}
</article>