{% extends "card.njk" %}

{% block content %}
  <header class="ll-card__header ll-card--{{ item.type }}__header">
    <time class="ll-card--{{ item.type }}__date" datetime="{{ item.date_long }}">
      {{ item.date_long }}
    </time>
    <h3 class="ll-card--{{ item.type }}__title">
      {{ item.headline }}
    </h3>
  </header>
  {% if item.text %}
    <p class="ll-card--{{ item.type }}__content">
      {{ item.text }}
    </p>
  {% endif %}
{% endblock %}